<Window x:Class="Daramee.Degra.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
		xmlns:local="clr-namespace:Daramee.Degra"
		xmlns:conv="clr-namespace:Daramee.Degra.Converters"
		xmlns:ctrl="clr-namespace:Daramee.Degra.Controls"
        mc:Ignorable="d"
        Icon="Resources/MainIcon.ico" Title="Degra" WindowStartupLocation="CenterScreen"
		Height="600" Width="800" Closing="Window_Closing">
	<Window.Resources>
		<conv:DegrationFormatConverter x:Key="degrationFormatConverter" />
		<conv:ResizeFilterConverter x:Key="resizeFilterConverter" />
		<conv:ListViewItemColorConverter x:Key="listViewItemColorConverter" />

		<Path x:Key="iconOpenButton" Data="M7.5160018,7.0210069L32,7.0210069 26.112001,21.280001 2.2460016,21.280001z M0,0L9.2969996,0 11.158,4.0930236 26.091997,4.0930236 26.087999,5.3469933 6.3500015,5.3469933 0.46300124,21.280001 0,21.280001z" Stretch="Uniform" Fill="#FF000000" Width="14" Height="14" RenderTransformOrigin="0.5,0.5" />
		<Path x:Key="iconDeleteButton" Data="M2.2927691,29.869995L29.987991,29.869995C30.572986,29.869995 31.051994,30.350006 31.051994,30.93399 31.051994,31.522003 30.572986,32 29.987991,32L2.2927691,32C1.7077578,32 1.2287654,31.522003 1.2287652,30.93399 1.2287654,30.350006 1.7077578,29.869995 2.2927691,29.869995z M9.8858304,11.558014L2.1267674,19.368011 7.0638022,24.429993C7.4928064,24.862,8.5888075,25.610016,9.1948151,25.610016L12.466844,25.610016C13.073843,25.610016,13.934858,24.862,14.364853,24.429993L18.478898,20.153992z M19.202903,0C19.747905,0,20.292909,0.24398804,20.707904,0.65899658L29.412975,9.3980103C30.240983,10.225006,30.240983,11.653992,29.412975,12.483002L16.103881,25.936005C15.274865,26.766998,13.640849,27.73999,12.466844,27.73999L9.1948151,27.73999C8.0238165,27.73999,6.3878021,26.766998,5.5577931,25.936005L0.62175103,20.708008C-0.20725034,19.880005,-0.20725034,18.52301,0.62175103,17.697998L17.69688,0.6210022C18.108886,0.20599365,18.656894,0,19.202903,0z" Stretch="Uniform" Fill="#FF000000" Width="14" Height="14" RenderTransformOrigin="0.5,0.5" />
		<Path x:Key="iconApplyButton" Data="M0,0L16,8 32,16 16,24 0,32 0,16z" Stretch="Uniform" Fill="#FF000000" Width="14" Height="14" RenderTransformOrigin="0.5,0.5" />
		<Path x:Key="iconCancelButton" Data="M4.3309999,0L27.669001,0C30.049999,0,32,1.9419985,32,4.3129973L32,27.686986C32,30.059985,30.048,31.999984,27.669001,31.999984L4.3309999,31.999984C1.9499998,31.999984,0,30.057984,0,27.686986L0,4.3129973C0,1.9399986,1.9499998,0,4.3309999,0z" Stretch="Uniform" Fill="#FF000000" Width="14" Height="14" RenderTransformOrigin="0.5,0.5" />

	</Window.Resources>
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="32" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<ToolBarTray>
			<ToolBar Height="32">
				<ToolBar.Resources>
					<Style x:Key="ToolBarButtonStyle" TargetType="Button">
						<Style.Triggers>
							<Trigger Property="IsEnabled" Value="False">
								<Setter Property="Opacity" Value="0.25" />
							</Trigger>
							<Trigger Property="IsEnabled" Value="True">
								<Setter Property="Opacity" Value="1.0" />
							</Trigger>
						</Style.Triggers>
					</Style>
				</ToolBar.Resources>

				<Button Name="ButtonOpen" Content="{StaticResource iconOpenButton}" ToolTip="Open" Style="{StaticResource ToolBarButtonStyle}" Click="MenuItem_Open_Click" />
				<Button Name="ButtonClear" Content="{StaticResource iconDeleteButton}" ToolTip="Clear" Style="{StaticResource ToolBarButtonStyle}" Click="MenuItem_Clear_Click" />

				<Separator />

				<Button Name="ButtonApply" Content="{StaticResource iconApplyButton}" ToolTip="Apply" Style="{StaticResource ToolBarButtonStyle}" Click="MenuItem_Apply_Click" />
				<Button Name="ButtonCancel" Content="{StaticResource iconCancelButton}" ToolTip="Cancel" IsEnabled="False" Style="{StaticResource ToolBarButtonStyle}" Click="MenuItem_Cancel_Click" />

				<Separator />

				<ProgressBar Name="ProgressBarLog" Minimum="0" Maximum="1" Value="{Binding Progress}" Width="64" Height="16" VerticalAlignment="Center" Margin="0,0,4,0" />
				<TextBlock Name="TextBlockLog" Text="{Binding ProceedFile}" VerticalAlignment="Center" />
			</ToolBar>
		</ToolBarTray>
		
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="256" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<ScrollViewer Name="ScrollViewerSettings">
				<StackPanel Grid.Column="0" Orientation="Vertical" Margin="8">
					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockConvPath" Text="Conversion Path" FontSize="12" Margin="0,0,0,4" />
						<TextBlock x:Name="TextBlockConvPathText" Text="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ConversionPath}" />
						<Button Content="Browse..." Click="ButtonBrowseConversionPath_Click" />
					</StackPanel>
					
					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockFileOverwrite" Text="File Overwrite" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleFileOverwrite" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=FileOverwrite}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockImageFormat" Text="Image Format" FontSize="12" Margin="0,0,0,4" />
						<ComboBox x:Name="ComboBoxImageFormat" HorizontalAlignment="Stretch" SelectedIndex="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ImageFormat, Converter={StaticResource degrationFormatConverter}}">
							<ComboBoxItem Content="Original Format" />
							<ComboBoxItem Content="WebP" />
							<ComboBoxItem Content="JPEG" />
							<ComboBoxItem Content="PNG" />
						</ComboBox>
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockMaximumHeight" Text="Maximum Image Height" FontSize="12" Margin="0,0,0,4" />
						<ctrl:UpDownTextBox x:Name="TextBoxMaximumHeight" HorizontalAlignment="Stretch" Value="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=MaximumImageHeight, Mode=TwoWay}" Minimum="1" Maximum="99999999" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockResizeFilter" Text="Resize Filter" FontSize="12" Margin="0,0,0,4" />
						<ComboBox x:Name="ComboBoxResizeFilter" HorizontalAlignment="Stretch" SelectedIndex="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ResizeFilter, Converter={StaticResource resizeFilterConverter}}">
							<ComboBoxItem Content="Nearest" />
							<ComboBoxItem Content="Bilinear" />
							<ComboBoxItem Content="Bicubic" />
							<ComboBoxItem Content="Lanczos" />
						</ComboBox>
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockQuality" Text="Image Quality(WebP, JPEG)" FontSize="12" Margin="0,0,0,4" />
						<ctrl:UpDownTextBox x:Name="TextBoxQuality" HorizontalAlignment="Stretch" Value="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ImageQuality, Mode=TwoWay}" Minimum="1" Maximum="100" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockLossless" Text="Lossless Compression(WebP)" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleLossless" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=Lossless}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockIndexedPixelFormat" Text="8-bit Indexed Pixel Format(PNG)" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleIndexedPixelFormat" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=IndexedPixelFormat}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockGrayscalePixelFormat" Text="Grayscale Pixel Format" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleGrayscalePixelFormat" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=GrayscalePixelFormat}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock Text="Use Zopfli PNG Compression" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleUseZopfli" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ZopfliPNGOptimization}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock Text="Use Histogram Equalization" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleHistogramEqualization" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=HistogramEqualization}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock Text="No Convert to JPEG If have Transparent" FontSize="12" Margin="0,0,0,4" />
						<CheckBox x:Name="ToggleNoConvertTransparentDetect" IsChecked="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=NoConvertTransparentDetected}" />
					</StackPanel>

					<StackPanel Margin="0,0,0,8">
						<TextBlock x:Uid="TextBlockThreadCount" Text="Thread Count (0 to All Core, Max 96)" FontSize="12" Margin="0,0,0,4" />
						<ctrl:UpDownTextBox x:Name="TextBoxThreadCount" HorizontalAlignment="Stretch" Value="{Binding Source={x:Static local:MainWindow.SharedWindow}, Path=ThreadCount, Mode=TwoWay}" Minimum="0" Maximum="96" />
					</StackPanel>

					<Button x:Uid="ButtonLicenses" Content="Licenses" HorizontalAlignment="Stretch" Height="24" />
				</StackPanel>
			</ScrollViewer>

			<ListView Name="ListViewFiles" Grid.Column="1" AllowDrop="True" Drop="ListViewFiles_Drop" DragEnter="ListViewFiles_DragEnter">
				<ListView.ItemContainerStyle>
					<Style TargetType="{x:Type ListViewItem}">
						<Setter Property="Background" Value="{Binding Path=Status, Converter={StaticResource listViewItemColorConverter}}" />
					</Style>
				</ListView.ItemContainerStyle>

				<ListView.View>
					<GridView>
						<GridView.ColumnHeaderTemplate>
							<DataTemplate>
								<TextBlock Text="{Binding}" Margin="0,4,0,4" />
							</DataTemplate>
						</GridView.ColumnHeaderTemplate>
						
						<GridViewColumn Width="32">
							<GridViewColumnHeader Content="" />
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<CheckBox IsChecked="{Binding Queued}" />
									</StackPanel>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>

						<GridViewColumn Width="394">
							<GridViewColumnHeader Content="Original File" />
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal">
										<TextBlock Foreground="DarkSlateBlue" Text="{Binding OriginalFilename}" ToolTip="{Binding OriginalFilename}" />
									</StackPanel>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn Width="72">
							<GridViewColumnHeader Content="Status" />
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock Foreground="DarkSlateBlue" Text="{Binding Status}" Background="Transparent" />
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
		</Grid>
	</Grid>
</Window>
